{
  "phases": {
    "setup": {
      "nixPkgs": ["php83", "php83Packages.composer"]
    },
    "install": {
      "cmds": ["composer install --optimize-autoloader --no-dev"]
    },
    "build": {
      "cmds": [
        "php artisan config:clear",
        "php artisan route:clear",
        "php artisan view:clear"
      ]
    }
  },
  "start": {
    "cmd": "php artisan serve --host=0.0.0.0 --port=$PORT"
  }
}
